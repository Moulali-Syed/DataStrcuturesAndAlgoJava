package mtimeComplexityAnalysis;

//sum of elements on left equal to sum of elements on right
public class EEquilibriumIndex {
	
	
	public static int equilibriumIndex(int[] arr) {
		
		int leftsum=0;
		int rightsum=0;
		
		//1st find sum of all array elements
		for(int i=0;i<arr.length;i++) {
			rightsum += arr[i]; 
		}
		
		//start iterating thru all elements
		for(int i=0;i<arr.length;i++) {
			rightsum-=arr[i];
			if(leftsum==rightsum) {
				return i;
			}
			leftsum+=arr[i];
		}
		return -1;
		
	}
	public static void main(String[] args) {
		
			
	}
}
