package kStrings;

public class PRemoveConsecutiveDuplicates {

	public static String checkConsecutiveDuplicates(String str) {
		
		String uniqueSt = "";
		for(int i=0;i<str.length();i++) {
			if(uniqueSt.length()==0) {
				uniqueSt = ""+ str.charAt(i);
			}else {
				if(str.charAt(i) == uniqueSt.charAt(uniqueSt.length()-1)) {
					continue;
				}else {
					uniqueSt+=str.charAt(i);
				}
			}
		}
		return uniqueSt;
	}
	public static void main(String[] args) {
		String s = checkConsecutiveDuplicates("aabbbccddda");
		System.out.println(s);
	}
}
