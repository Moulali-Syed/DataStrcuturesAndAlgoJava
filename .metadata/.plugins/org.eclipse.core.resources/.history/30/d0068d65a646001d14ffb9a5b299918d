package bGettingStartedWithJava;

public class CVariablesAndDataTypes {

	public static void main(String[] args) {
		/*
		 * while creating variables we must specify the datatype
		 */
		
		int a = 10;
		int b = 32;
		int c = a+b;
		System.out.println(c);
	}
}
/*

0 - is 1 bit
1 - is bit

8bits = 1byte

int - 4bytes = 32 bits

*/